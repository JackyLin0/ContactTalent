<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    >
<ImageView
    android:id="@+id/photo"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/favoritea"
    />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/photo"
        android:paddingLeft="5dp"
        android:text="@string/contant"
        android:textColor="@color/colorBlack"
        />

    <ImageView
        android:id="@+id/dept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/name"
        android:paddingLeft="5dp"
        android:src="@mipmap/dept_customer"
        />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/photo"
        android:paddingLeft="5dp"
        android:paddingStart="3dp"
        android:text="09xxxxxxxx"
        android:textColor="#00bbff" />
    <ImageView
        android:id="@+id/phoneicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/phone"
        android:layout_below="@id/name"
        android:paddingLeft="5dp"
        android:paddingStart="3dp"
        android:src="@mipmap/mobile"
        />

    <TextView
        android:id="@+id/company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/phoneicon"
        android:layout_marginLeft="80dp"
        android:paddingStart="3dp"
        android:text="鴻奕有限公司"
        android:textColor="#00bbff" />

    <TextView
        android:id="@+id/dTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/phoneicon"
        android:layout_below="@id/company"
        android:layout_marginLeft="80dp"
        android:text="2017/02/17 10:01:08"
        android:textColor="#c1c1c1" />

</RelativeLayout>
