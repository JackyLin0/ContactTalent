<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tw.brad.apps.contacttalent.views.MainActivity">
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/tel_record"
            android:text="@string/tel_record"
            android:drawableTop="@drawable/telrecord"
            style="@style/style_RadioButton"
             />

        <RadioButton
            android:id="@+id/contact"
            android:text="@string/contant"
            android:drawableTop="@drawable/contact"
            style="@style/style_RadioButton"
             />
        <RadioButton
            android:id="@+id/favorite"
            android:drawableTop="@drawable/favoritea"
            android:text="@string/favorite"
            style="@style/style_RadioButton"
            />

        <RadioButton
            android:id="@+id/setting"
            android:drawableTop="@drawable/settinga"
            android:text="@string/setting"
            style="@style/style_RadioButton"
            />
    </RadioGroup>


    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/viewPager"
        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
