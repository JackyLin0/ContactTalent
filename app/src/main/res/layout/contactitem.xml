<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
    android:padding="2dp"
    >
<ImageView
    android:id="@+id/contact_photo"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/photo"
    />

    <TextView
        android:id="@+id/contact_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_photo"
        android:paddingLeft="5dp"
        android:text="HY001"
        android:textColor="@color/colorBlack"
        android:textSize="14dp"
        android:layout_below="@id/contact_photo"
        android:layout_alignLeft="@id/contact_photo"

        />


    <ImageView
        android:id="@+id/contact_dept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@drawable/dept_customer"
        android:layout_below="@id/contact_photo"
        android:layout_toRightOf="@id/contact_id"
        />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact"
        android:textColor="@color/colorBlack"
        android:textSize="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/contact_phone" />


    <TextView
        android:id="@+id/contact_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingStart="5dp"
        android:text="09xxxxxxxx"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14dp"

        android:layout_below="@+id/contact_name"
        android:layout_alignStart="@+id/contact_company" />
    <ImageView
        android:id="@+id/contact_phoneicon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:paddingLeft="10dp"
        android:paddingStart="3dp"
        android:src="@drawable/mobile"
        android:layout_alignTop="@+id/contact_phone"
        android:layout_toEndOf="@+id/contact_phone" />

    <TextView
        android:id="@+id/contact_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="3dp"

        android:text="鴻奕有限公司"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14dp"

        android:layout_below="@+id/contact_phone"
        android:layout_toEndOf="@+id/contact_dept" />

    <TextView
        android:id="@+id/postal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="422"
        android:textColor="#c1c1c1"
        android:textSize="14dp"

        android:layout_below="@+id/contact_company"
        android:layout_toEndOf="@+id/contact_dept" />
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="台中市西屯路2段256巷6號9F-3"
        android:textColor="#c1c1c1"
        android:textSize="14dp"

        android:layout_below="@+id/contact_company"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/detail"
        android:foregroundGravity="center_vertical"
        android:paddingTop="30dp"
        android:paddingRight="10dp"
        android:layout_alignParentRight="true" />

</RelativeLayout>
